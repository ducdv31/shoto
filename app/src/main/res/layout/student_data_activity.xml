<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_32"
            android:background="@color/bg_hover_dark">

            <ImageView
                android:id="@+id/imvBack"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="@dimen/dp_8"
                android:src="@drawable/ic_back" />

            <com.hjq.demo.widget.AppTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Danh thí sinh thi trên thiết bị"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14">

            </com.hjq.demo.widget.AppTextViewBold>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_8"
            android:background="@color/black"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_border"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_1"
                    android:orientation="horizontal">

                    <com.hjq.demo.widget.AppTextViewBold
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textAllCaps="true"
                        android:layout_marginVertical="@dimen/dp_4"
                        android:layout_weight="0.4"
                        android:gravity="center"
                        android:text="STT"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_10" />

                    <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="match_parent"
                        android:background="@color/gray" />

                    <com.hjq.demo.widget.AppTextViewBold
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginVertical="@dimen/dp_4"
                        android:layout_weight="1"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:text="Họ và tên"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_10" />

                    <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="match_parent"
                        android:background="@color/gray" />

                    <com.hjq.demo.widget.AppTextViewBold
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textAllCaps="true"
                        android:layout_marginVertical="@dimen/dp_4"
                        android:layout_weight="0.8"
                        android:gravity="center"
                        android:text="Ngày sinh"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_10" />

                    <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="match_parent"
                        android:background="@color/gray" />

                    <com.hjq.demo.widget.AppTextViewBold
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_marginVertical="@dimen/dp_4"
                        android:gravity="center"
                        android:text="Kỳ Sh"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_10" />

                    <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="match_parent"
                        android:background="@color/gray" />

                    <com.hjq.demo.widget.AppTextViewBold
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.8"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:layout_marginVertical="@dimen/dp_4"
                        android:text="Số\nBáo danh"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_10" />

                    <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="match_parent"
                        android:background="@color/gray" />

                    <com.hjq.demo.widget.AppTextViewBold
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textAllCaps="true"
                        android:layout_weight="1"
                        android:layout_marginVertical="@dimen/dp_4"
                        android:gravity="center"
                        android:text="Mã ĐK"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_10" />

                    <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="match_parent"
                        android:background="@color/gray" />

                    <com.hjq.demo.widget.AppTextViewBold
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.8"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:layout_marginVertical="@dimen/dp_4"
                        android:text="Ngày thi"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_10" />

                    <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="match_parent"
                        android:background="@color/gray" />

                    <com.hjq.demo.widget.AppTextViewBold
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textAllCaps="true"
                        android:layout_weight="0.8"
                        android:gravity="center"
                        android:layout_marginVertical="@dimen/dp_4"
                        android:text="TG\nBắt Đầu"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_10" />

                    <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="match_parent"
                        android:background="@color/gray" />

                    <com.hjq.demo.widget.AppTextViewBold
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.8"
                        android:gravity="center"
                        android:layout_marginVertical="@dimen/dp_4"
                        android:text="TG\nKết Thúc"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_10" />

                    <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="match_parent"
                        android:background="@color/gray" />

                    <com.hjq.demo.widget.AppTextViewBold
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.8"
                        android:gravity="center"
                        android:text="Tổng\nđiểm thi"
                        android:layout_marginVertical="@dimen/dp_4"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_10" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/gray" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rclExamData"
                    android:layout_marginHorizontal="@dimen/dp_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


</layout>